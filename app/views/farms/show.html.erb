<div class="container">
  <h1> Farm: <%= @farm.name %> </h1>
	<p> Location: <%= @farm.location %> </p>
  <p> Website: <%= @farm.website %> </p>
  <p> Description: <%= @farm.description %> </p>
  <h3> Farmers </h3>
    <% @farm.users.each do |user| %>
      <p> Name: <%= user.name %> </p>
      <p> Bio: <%= user.bio %> </p>
    <% end %>
  <p><%= link_to 'Edit', edit_farm_path %></p>
  <p><%= link_to 'Back', farms_path %></p>
</div>
