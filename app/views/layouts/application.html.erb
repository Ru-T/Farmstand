<!DOCTYPE html>
<html>
<head>
  <title>Farmstand</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <% if current_admin %>
      <%= link_to "Farms", farms_path %>
      <%= link_to "New Farm", new_farm_path %>
      <%= link_to "Positions", positions_path %>
      <%= link_to "New Position", new_position_path %>
      <%= link_to "Log Out", destroy_admin_session_path, method: :delete %>
    <% else %>
      <%= link_to "Log In", new_admin_session_path %>
    <% end %>
  </div>
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
<%= yield %>
</body>
